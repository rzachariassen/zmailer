	printf(STDERR "unknown parameter: %s\n", $ARGV[0]);
	printf(STDERR "post-install [-n|--dryrun] [--destdir /virtual/root] [--zconfig @ZMAILERCFGFILE@] [-MD5[|-OLDSTYLE]]\n");
