	    shift @ARGV;
	    next;
	}

	if ($ARGV[0] eq '--zconfig') {
	    shift @ARGV;
	    $ZCONFIG = $ARGV[0];
	    shift @ARGV;
	    next;
	}
	if ($ARGV[0] eq '--dryrun'  or $ARGV[0] eq '-n') {
